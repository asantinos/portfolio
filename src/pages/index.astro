---
import Layout from "../layouts/RootLayout.astro";
import { projects } from "../data/projects";
---

<Layout title="Álex Santos | Software Developer" description="Software Developer from Asturias, Spain. Crafting iOS & web applications with a focus on minimalist design.">
  <div class="page">
    <!-- Hero Section -->
    <header class="hero">
      <div class="hero-content">
        <span class="greeting">Hello, I'm</span>
        <h1 class="name">Álex Santos</h1>
        <p class="tagline">Software Developer crafting <em>iOS & web applications</em> with a focus on minimalist design.</p>
        <div class="location">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
          <span>Spain</span>
        </div>
      </div>
    </header>

    <!-- About Section -->
    <section class="section about" id="about">
      <h2 class="section-title">About</h2>
      <div class="about-content">
        <p>I craft digital experiences with a focus on clean aesthetics and intuitive interactions. My work spans from native iOS applications to modern web platforms, always prioritizing user experience and thoughtful design.</p>
        <p>Passionate about creating products that people genuinely enjoy using—where every detail serves a purpose.</p>
      </div>
    </section>

    <!-- Projects Section -->
    <section class="section projects" id="projects">
      <h2 class="section-title">Projects</h2>
      <div class="projects-grid">
        {projects.map((project) => (
          <a href={project.url} target="_blank" rel="noopener noreferrer" class={`project-card${project.className ? ` ${project.className}` : ""}`}>
            <div class="project-header">
              <h3 class="project-name">{project.name}</h3>
              <span class={`project-status ${project.status}`}>
                {project.status === "active" ? "Active" : "In Development"}
              </span>
            </div>
            <p class="project-desc">{project.description}</p>
            <div class="project-tech">
              {project.tech.map((t) => <span>{t}</span>)}
            </div>
            <span class="project-link">View Project →</span>
          </a>
        ))}
      </div>
    </section>

    <!-- Skills Section -->
    <section class="section skills" id="skills">
      <h2 class="section-title">Skills</h2>
      <div class="skills-grid">
        <div class="skill-group">
          <h3>Languages</h3>
          <ul>
            <li>JavaScript</li>
            <li>TypeScript</li>
            <li>Python</li>
          </ul>
        </div>
        <div class="skill-group">
          <h3>Frameworks</h3>
          <ul>
            <li>React / Next.js</li>
            <li>Astro</li>
            <li>Expo / React Native</li>
            <li>Node.js</li>
            <li>SwiftUI</li>
          </ul>
        </div>
        <div class="skill-group">
          <h3>Tools & More</h3>
          <ul>
            <li>Tailwind CSS</li>
            <li>Git</li>
            <li>Docker</li>
            <li>Figma</li>
            <li>Supabase</li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="section contact" id="contact">
      <h2 class="section-title">Get in Touch</h2>
      <p class="contact-intro">Interested in working together or just want to say hello?</p>
      <div class="contact-links">
        <a href="mailto:hello@asantinos.com" class="contact-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
          <span>hello@asantinos.com</span>
        </a>
        <a href="https://github.com/asantinos" target="_blank" rel="noopener noreferrer" class="contact-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
          <span>GitHub</span>
        </a>
        <a href="https://linkedin.com/in/asantinos" target="_blank" rel="noopener noreferrer" class="contact-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
          <span>LinkedIn</span>
        </a>
        <a href="https://x.com/alexgrok" target="_blank" rel="noopener noreferrer" class="contact-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4l11.733 16h4.267l-11.733 -16z" /><path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772" /></svg>
          <span>X (Twitter)</span>
        </a>
      </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
      <p>© {new Date().getFullYear()} Álex Santos</p>
    </footer>
  </div>
</Layout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;0,600;1,400&family=DM+Serif+Display:ital@0;1&display=swap');

  :root {
    --color-bg: #faf9f7;
    --color-bg-alt: #f3f1ed;
    --color-text: #2c2c2c;
    --color-text-muted: #6b6b6b;
    --color-accent: #c4a574;
    --color-accent-hover: #b39259;
    --color-border: #e5e2dc;
    --color-success: #5a8a6c;
    --color-warning: #c9943a;
    --font-serif: 'DM Serif Display', Georgia, serif;
    --font-sans: 'DM Sans', system-ui, sans-serif;
  }

  .page {
    min-height: 100vh;
    background: var(--color-bg);
    color: var(--color-text);
    font-family: var(--font-sans);
    line-height: 1.7;
  }

  /* Hero */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 70%;
    height: 150%;
    background: radial-gradient(ellipse at center, rgba(196, 165, 116, 0.08) 0%, transparent 70%);
    pointer-events: none;
  }

  .hero-content {
    max-width: 600px;
    text-align: center;
    animation: fadeUp 0.8s ease-out;
  }

  .greeting {
    font-size: 1rem;
    color: var(--color-text-muted);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    display: block;
    margin-bottom: 0.75rem;
  }

  .name {
    font-family: var(--font-serif);
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 400;
    line-height: 1.1;
    margin: 0 0 1.5rem;
    letter-spacing: -0.02em;
  }

  .tagline {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin: 0 0 2rem;
    max-width: 480px;
    margin-left: auto;
    margin-right: auto;
  }

  .tagline em {
    font-style: italic;
    color: var(--color-text);
  }

  .location {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .location svg {
    opacity: 0.7;
  }

  /* Sections */
  .section {
    max-width: 800px;
    margin: 0 auto;
    padding: 5rem 2rem;
    border-top: 1px solid var(--color-border);
  }

  .section-title {
    font-family: var(--font-serif);
    font-size: 2rem;
    font-weight: 400;
    margin: 0 0 2.5rem;
    letter-spacing: -0.01em;
  }

  /* About */
  .about-content p {
    margin: 0 0 1.25rem;
    color: var(--color-text-muted);
    font-size: 1.1rem;
  }

  .about-content p:last-child {
    margin-bottom: 0;
  }

  /* Projects */
  .projects-grid {
    display: grid;
    gap: 1.5rem;
  }

  .project-card {
    display: block;
    background: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 2rem;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.08);
    border-color: var(--color-accent);
  }

  .project-card.stride {
    background: linear-gradient(135deg, var(--color-bg-alt) 0%, #e8eef7 100%);
    border-color: #cdd8ea;
  }

  .project-card.monked {
    background: linear-gradient(135deg, var(--color-bg-alt) 0%, #f7f3eb 100%);
    border-color: #e0d6c4;
  }

  .project-card.pump {
    background: linear-gradient(135deg, var(--color-bg-alt) 0%, #e5e5e5 100%);
    border-color: #cccccc;
  }

  .project-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
  }

  .project-name {
    font-family: var(--font-serif);
    font-size: 1.5rem;
    font-weight: 400;
    margin: 0;
  }

  .project-status {
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.35rem 0.75rem;
    border-radius: 20px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .project-status.active {
    background: rgba(90, 138, 108, 0.15);
    color: var(--color-success);
  }

  .project-status.dev {
    background: rgba(201, 148, 58, 0.15);
    color: var(--color-warning);
  }

  .project-desc {
    color: var(--color-text-muted);
    margin: 0 0 1.25rem;
    line-height: 1.6;
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.25rem;
  }

  .project-tech span {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    background: var(--color-bg);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    border: 1px solid var(--color-border);
  }

  .project-link {
    font-size: 0.9rem;
    color: var(--color-accent);
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .project-card:hover .project-link {
    color: var(--color-accent-hover);
  }

  /* Skills */
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 3rem;
  }

  .skill-group h3 {
    font-family: var(--font-serif);
    font-size: 1.1rem;
    font-weight: 400;
    margin: 0 0 1rem;
    color: var(--color-text);
  }

  .skill-group ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .skill-group li {
    color: var(--color-text-muted);
    padding: 0.4rem 0;
    font-size: 0.95rem;
    border-bottom: 1px solid var(--color-border);
  }

  .skill-group li:last-child {
    border-bottom: none;
  }

  /* Contact */
  .contact-intro {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    margin: 0 0 2rem;
  }

  .contact-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .contact-link {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.85rem 1.5rem;
    background: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    text-decoration: none;
    color: var(--color-text);
    font-size: 0.95rem;
    transition: all 0.2s ease;
  }

  .contact-link:hover {
    background: var(--color-text);
    color: var(--color-bg);
    border-color: var(--color-text);
  }

  .contact-link svg {
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .contact-link:hover svg {
    opacity: 1;
  }

  /* Footer */
  .footer {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 2rem;
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  .footer p {
    margin: 0;
    color: var(--color-text-muted);
    font-size: 0.85rem;
  }

  /* Animations */
  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .section {
    opacity: 0;
    animation: fadeUp 0.6s ease-out forwards;
  }

  .about { animation-delay: 0.1s; }
  .projects { animation-delay: 0.2s; }
  .skills { animation-delay: 0.3s; }
  .contact { animation-delay: 0.4s; }

  /* Responsive */
  @media (max-width: 640px) {
    .hero {
      min-height: 70vh;
      padding: 3rem 1.5rem;
    }

    .section {
      padding: 3.5rem 1.5rem;
    }

    .section-title {
      font-size: 1.75rem;
      margin-bottom: 2rem;
    }

    .project-card {
      padding: 1.5rem;
    }

    .project-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .skills-grid {
      gap: 2rem;
    }

    .contact-links {
      flex-direction: column;
    }

    .contact-link {
      justify-content: center;
    }
  }
</style>