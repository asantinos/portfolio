---
import Layout from "../layouts/RootLayout.astro";

const name = "ALEX SANTOS";
const title = "SOFTWARE DEV";

const menuItems = [
    { label: "ABOUT", content: "I build simple, thoughtful digital products." },
    { label: "STRIDE", content: "Minimal step tracker for iOS" },
    { label: "CONTACT", content: "hello@asantinos.com" },
    { label: "SOCIAL", content: "X / GitHub / LinkedIn" },
];

const socials = [
    { label: "X", href: "https://x.com/alexgrok" },
    { label: "GitHub", href: "https://github.com/asantinos" },
    { label: "LinkedIn", href: "https://linkedin.com/in/asantinos" },
];
---

<Layout title="álex santos" description="Software Developer">
    <main class="min-h-screen flex items-center justify-center p-4 bg-[#1a1a2e]">

        <!-- Game Boy Color -->
        <div class="gameboy">
            <!-- Top curve/ridge -->
            <div class="gameboy-top-ridge"></div>

            <!-- Screen area -->
            <div class="screen-container">
                <div class="screen-bezel">
                    <p class="screen-label">DOT MATRIX WITH STEREO SOUND</p>
                    <div class="screen">
                        <div class="screen-content">
                            <!-- Power indicator -->
                            <div class="power-indicator">
                                <span class="power-dot"></span>
                                <span class="power-text">BATTERY</span>
                            </div>

                            <!-- Game content -->
                            <div class="game-screen">
                                <div class="title-area">
                                    <p class="pixel-title">{name}</p>
                                    <p class="pixel-subtitle">{title}</p>
                                </div>

                                <div class="menu">
                                    {menuItems.map((item, i) => (
                                        <a
                                            href={item.label === "STRIDE" ? "/stride" : item.label === "CONTACT" ? "mailto:hello@asantinos.com" : "#"}
                                            class="menu-item"
                                            data-index={i}
                                        >
                                            <span class="selector">▶</span>
                                            <span class="menu-label">{item.label}</span>
                                        </a>
                                    ))}
                                </div>

                                <div class="footer-text">
                                    <p>PRESS START</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <p class="brand-text">GAME BOY<span class="color-text">COLOR</span></p>
            </div>

            <!-- Controls -->
            <div class="controls">
                <!-- D-Pad -->
                <div class="dpad-container">
                    <div class="dpad">
                        <div class="dpad-up"></div>
                        <div class="dpad-right"></div>
                        <div class="dpad-down"></div>
                        <div class="dpad-left"></div>
                        <div class="dpad-center"></div>
                    </div>
                </div>

                <!-- A/B Buttons -->
                <div class="ab-buttons">
                    <div class="button-group">
                        <button class="action-btn btn-b">B</button>
                        <button class="action-btn btn-a">A</button>
                    </div>
                </div>
            </div>

            <!-- Start/Select -->
            <div class="start-select">
                <div class="ss-btn-container">
                    <button class="ss-btn"></button>
                    <span>SELECT</span>
                </div>
                <div class="ss-btn-container">
                    <button class="ss-btn"></button>
                    <span>START</span>
                </div>
            </div>

            <!-- Speaker -->
            <div class="speaker">
                {[...Array(6)].map(() => (
                    <div class="speaker-line">
                        {[...Array(5)].map(() => (
                            <div class="speaker-hole"></div>
                        ))}
                    </div>
                ))}
            </div>
        </div>

        <!-- Social links below -->
        <div class="social-links">
            {socials.map((social) => (
                <a
                    href={social.href}
                    rel="me noopener noreferrer"
                    target="_blank"
                >
                    {social.label}
                </a>
            ))}
        </div>
    </main>
</Layout>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap');

    .gameboy {
        position: relative;
        width: 280px;
        height: 480px;
        background: linear-gradient(145deg, #7b68a6 0%, #6a5a91 50%, #5d4e80 100%);
        border-radius: 12px 12px 40px 40px;
        padding: 16px;
        box-shadow:
            inset 2px 2px 4px rgba(255,255,255,0.2),
            inset -2px -2px 4px rgba(0,0,0,0.2),
            8px 8px 32px rgba(0,0,0,0.5);
    }

    .gameboy-top-ridge {
        position: absolute;
        top: 0;
        left: 20px;
        right: 20px;
        height: 8px;
        background: linear-gradient(to bottom, #8b7ab0, #7b68a6);
        border-radius: 0 0 4px 4px;
    }

    .screen-container {
        background: #5a4a7a;
        border-radius: 8px;
        padding: 8px;
        margin-top: 8px;
    }

    .screen-bezel {
        background: #4a3a6a;
        border-radius: 4px;
        padding: 4px 8px 8px;
    }

    .screen-label {
        font-family: 'Arial', sans-serif;
        font-size: 5px;
        color: #8a7aaa;
        text-align: center;
        margin-bottom: 4px;
        letter-spacing: 1px;
    }

    .screen {
        background: #8b9c5a;
        border-radius: 4px;
        padding: 4px;
        box-shadow: inset 2px 2px 8px rgba(0,0,0,0.3);
    }

    .screen-content {
        background: #9bac6a;
        min-height: 160px;
        border-radius: 2px;
        position: relative;
        overflow: hidden;
    }

    .power-indicator {
        position: absolute;
        top: 4px;
        left: 4px;
        display: flex;
        align-items: center;
        gap: 3px;
    }

    .power-dot {
        width: 6px;
        height: 6px;
        background: #5a6b3a;
        border-radius: 50%;
        animation: blink 2s infinite;
    }

    .power-text {
        font-family: 'Press Start 2P', monospace;
        font-size: 4px;
        color: #5a6b3a;
    }

    @keyframes blink {
        0%, 100% { background: #5a6b3a; }
        50% { background: #3a4b2a; }
    }

    .game-screen {
        padding: 20px 12px 12px;
        display: flex;
        flex-direction: column;
        height: 152px;
    }

    .title-area {
        text-align: center;
        margin-bottom: 12px;
        padding-bottom: 8px;
        border-bottom: 2px solid #5a6b3a;
    }

    .pixel-title {
        font-family: 'Press Start 2P', monospace;
        font-size: 10px;
        color: #2a3b1a;
        margin-bottom: 4px;
        text-shadow: 1px 1px 0 #7a8b5a;
    }

    .pixel-subtitle {
        font-family: 'Press Start 2P', monospace;
        font-size: 6px;
        color: #4a5b3a;
    }

    .menu {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .menu-item {
        display: flex;
        align-items: center;
        gap: 6px;
        font-family: 'Press Start 2P', monospace;
        font-size: 7px;
        color: #2a3b1a;
        text-decoration: none;
        padding: 2px 4px;
        transition: all 0.1s;
    }

    .menu-item:hover {
        background: #7a8b5a;
    }

    .menu-item:hover .selector {
        opacity: 1;
    }

    .selector {
        opacity: 0;
        font-size: 6px;
        transition: opacity 0.1s;
    }

    .menu-item:first-child .selector {
        animation: cursor-blink 1s infinite;
    }

    @keyframes cursor-blink {
        0%, 100% { opacity: 1; }
        50% { opacity: 0; }
    }

    .footer-text {
        text-align: center;
        font-family: 'Press Start 2P', monospace;
        font-size: 5px;
        color: #5a6b3a;
        animation: cursor-blink 1.5s infinite;
    }

    .brand-text {
        font-family: 'Arial Black', sans-serif;
        font-size: 11px;
        font-weight: 900;
        font-style: italic;
        color: #2a2a4a;
        text-align: left;
        margin-top: 6px;
        margin-left: 4px;
        letter-spacing: -0.5px;
    }

    .color-text {
        color: #4a8cca;
        margin-left: 2px;
        font-size: 9px;
    }

    .controls {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
        padding: 0 8px;
    }

    .dpad-container {
        width: 72px;
        height: 72px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .dpad {
        position: relative;
        width: 60px;
        height: 60px;
    }

    .dpad-up, .dpad-down, .dpad-left, .dpad-right {
        position: absolute;
        background: #2a2a4a;
        border-radius: 2px;
    }

    .dpad-up, .dpad-down {
        width: 20px;
        height: 24px;
        left: 50%;
        transform: translateX(-50%);
    }

    .dpad-left, .dpad-right {
        width: 24px;
        height: 20px;
        top: 50%;
        transform: translateY(-50%);
    }

    .dpad-up { top: 0; border-radius: 4px 4px 0 0; }
    .dpad-down { bottom: 0; border-radius: 0 0 4px 4px; }
    .dpad-left { left: 0; border-radius: 4px 0 0 4px; }
    .dpad-right { right: 0; border-radius: 0 4px 4px 0; }

    .dpad-center {
        position: absolute;
        width: 20px;
        height: 20px;
        background: #2a2a4a;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .ab-buttons {
        display: flex;
        align-items: center;
    }

    .button-group {
        display: flex;
        gap: 8px;
        transform: rotate(-25deg);
    }

    .action-btn {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: linear-gradient(145deg, #9a3a5a, #7a2a4a);
        border: none;
        color: #4a1a2a;
        font-family: 'Arial Black', sans-serif;
        font-size: 10px;
        font-weight: bold;
        cursor: pointer;
        box-shadow:
            inset 1px 1px 2px rgba(255,255,255,0.2),
            2px 2px 4px rgba(0,0,0,0.3);
    }

    .action-btn:active {
        box-shadow: inset 2px 2px 4px rgba(0,0,0,0.3);
    }

    .btn-a { margin-top: -12px; }

    .start-select {
        display: flex;
        justify-content: center;
        gap: 24px;
        margin-top: 16px;
        transform: rotate(-25deg);
    }

    .ss-btn-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4px;
    }

    .ss-btn {
        width: 28px;
        height: 8px;
        background: #4a4a6a;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        box-shadow: inset 1px 1px 2px rgba(0,0,0,0.3);
    }

    .ss-btn-container span {
        font-family: 'Arial', sans-serif;
        font-size: 6px;
        color: #3a3a5a;
        font-weight: bold;
    }

    .speaker {
        position: absolute;
        bottom: 24px;
        right: 16px;
        display: flex;
        flex-direction: column;
        gap: 4px;
        transform: rotate(-25deg);
    }

    .speaker-line {
        display: flex;
        gap: 4px;
    }

    .speaker-hole {
        width: 4px;
        height: 4px;
        background: #4a4a6a;
        border-radius: 50%;
    }

    .social-links {
        position: fixed;
        bottom: 24px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 24px;
    }

    .social-links a {
        font-family: 'Press Start 2P', monospace;
        font-size: 8px;
        color: #7b68a6;
        text-decoration: none;
        transition: color 0.2s;
    }

    .social-links a:hover {
        color: #9b88c6;
    }

    @media (min-width: 640px) {
        .gameboy {
            width: 320px;
            height: 540px;
        }

        .screen-content {
            min-height: 180px;
        }

        .game-screen {
            height: 172px;
        }

        .pixel-title {
            font-size: 12px;
        }

        .pixel-subtitle {
            font-size: 7px;
        }

        .menu-item {
            font-size: 8px;
        }
    }
</style>
