---
import Layout from "../layouts/RootLayout.astro";

const name = "álex santos";
const title = "Software Developer";
const bio =
    "I build simple, thoughtful products — focused on clarity, great UX, and intentional decisions.";

const links = [
    { label: "Projects", href: "/projects" },
    { label: "Writing", href: "/writing" },
    { label: "Now", href: "/now" },
    { label: "Contact", href: "/contact" },
];

const socials = [
    { label: "X / Twitter", href: "https://x.com/alexgrok" },
    { label: "GitHub", href: "https://github.com/asantinos" },
    { label: "LinkedIn", href: "https://linkedin.com/in/asantinos" },
    { label: "Email", href: "mailto:hello@asantinos.com" },
];
---

<Layout title={name} description={title}>
    <main class="min-h-screen px-6 py-16">
        <div class="max-w-3xl mx-auto">
            <header class="flex flex-col gap-10">
                <div>
                    <p class="text-sm text-neutral-500">asantinos.com</p>
                    <h1
                        class="mt-3 text-4xl font-bold tracking-tight sm:text-5xl text-neutral-100"
                    >
                        {name}
                    </h1>
                    <p class="mt-3 text-lg text-neutral-400">{title}</p>
                    <p class="mt-6 text-neutral-400 leading-relaxed max-w-2xl">
                        {bio}
                    </p>
                </div>

                <nav class="flex flex-wrap gap-2">
                    {
                        links.map((l) => (
                            <a
                                href={l.href}
                                class="rounded-xl px-4 py-2 text-sm font-medium text-neutral-200 ring-1 ring-neutral-800 hover:bg-neutral-900/30 transition-colors"
                            >
                                {l.label}
                            </a>
                        ))
                    }
                </nav>
            </header>

            <section class="mt-14 grid gap-6 sm:grid-cols-2">
                <div
                    class="rounded-2xl bg-neutral-900/30 ring-1 ring-neutral-800 p-6"
                >
                    <h2 class="text-lg font-semibold text-neutral-100">
                        Currently
                    </h2>
                    <ul class="mt-4 space-y-3 text-neutral-400 leading-relaxed">
                        <li>• Building small iOS + web products.</li>
                        <li>• Sharing progress and decisions in public.</li>
                        <li>• Refining a “less but better” approach.</li>
                    </ul>
                </div>

                <div
                    class="rounded-2xl bg-neutral-900/30 ring-1 ring-neutral-800 p-6"
                >
                    <h2 class="text-lg font-semibold text-neutral-100">
                        Featured
                    </h2>
                    <div class="mt-4 space-y-4">
                        <a
                            href="/stride"
                            class="block rounded-2xl bg-neutral-900/40 ring-1 ring-neutral-800 p-5 hover:bg-neutral-900/55 transition-colors"
                        >
                            <p class="text-neutral-100 font-semibold">Stride</p>
                            <p class="mt-1 text-sm text-neutral-400">
                                A minimal step tracker for iOS (Apple Health).
                            </p>
                        </a>

                        <!-- Add more featured projects here -->
                        <!--
						<a href="/project-slug" class="block rounded-2xl bg-neutral-900/40 ring-1 ring-neutral-800 p-5 hover:bg-neutral-900/55 transition-colors">
							<p class="text-neutral-100 font-semibold">Project Name</p>
							<p class="mt-1 text-sm text-neutral-400">One-line description.</p>
						</a>
						-->
                    </div>
                </div>
            </section>

            <section
                class="mt-14 rounded-2xl bg-neutral-900/30 ring-1 ring-neutral-800 p-6"
            >
                <h2 class="text-lg font-semibold text-neutral-100">Links</h2>
                <div class="mt-4 flex flex-wrap gap-3">
                    {
                        socials.map((s) => (
                            <a
                                href={s.href}
                                class="text-sm text-neutral-400 hover:text-neutral-200 transition-colors"
                                rel={
                                    s.href.startsWith("http")
                                        ? "me noopener noreferrer"
                                        : undefined
                                }
                                target={
                                    s.href.startsWith("http")
                                        ? "_blank"
                                        : undefined
                                }
                            >
                                {s.label}
                            </a>
                        ))
                    }
                </div>
            </section>

            <footer
                class="mt-16 flex items-center justify-center text-sm text-neutral-600"
            >
                <p>© {new Date().getFullYear()} asantinos</p>
            </footer>
        </div>
    </main>
</Layout>
